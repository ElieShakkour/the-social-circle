<form method="post" action="/registration" enctype="multipart/form-data">
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
        
          <div class="row justify-content-center align-items-center h-100">
             
            <div class="col-12 col-lg-9 col-xl-7">
              <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                <div class="card-body p-4 p-md-5">
                  <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Create Your Profile</h3>
                  <div class="card-body p-4 text-center">
                
                             
<img id="output" src="../images/unp.png"  width="200px" height="200px" style="border-radius: 50%;">

                    <input type="file" accept="image/*" id="file" name ="image" onchange="change(event)" style="display:none;"> 
                    <div> 
                   
        
        
                        <label class="btn btn-primary"  for="file">Upload Image </label>
                    </div>
                    <div class="row">
                      <div class="col-md-6 mb-4">
      
                        <div class="form-outline">
                            <label class="form-label" name="major"for="firstName">University Major</label>
                          <input type="text" id="firstName" class="form-control form-control-lg" name="major" />
                        
                        </div>
      
                      </div>
                      <div class="col-md-6 mb-4">
      
                        <div class="form-outline">
                            <img src="insta.png" height="25" /><label class="form-label" for="lastName">Instagram profile link</label>  
                          <input type="text" id="lastName" class="form-control form-control-lg" name="instagram" />
                              
                        </div>
      
                      </div>
                    </div>
      
                    <div class="row">
                      <div class="col-md-6 mb-4 d-flex align-items-center">
      
                        <div class="form-outline datepicker w-100">
                            <label for="birthdayDate" class="form-label">Age</label>
                          <input type="text" class="form-control form-control-lg" id="birthdayDate" name="age" />
                        
                        </div>
      
                      </div>
                      <div class="col-md-6 mb-4">
      
                        <h5 class="mb-2 pb-1">Relationship Status </h5>
      
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="single"
                            value="single" checked />
                          <label class="form-check-label" for="femaleGender">Single</label>
                        </div>
      
                        <div class="form-check form-check-inline">
                           
                          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="taken"
                            value="taken" />
                            <label class="form-check-label" for="maleGender">Taken</label>
                        </div>
      
                        <div class="form-check form-check-inline">
                          <input class="form-check-input" type="radio" name="inlineRadioOptions" id="other"
                            value="other" />
                          <label class="form-check-label" for="otherGender">Rather not spacify</label>
                        </div>
      
                      </div>
                    </div>
                    <div class="mt-4 pt-10">
                        <input class="btn btn-primary btn-lg" type="submit" value="Submit" />
                      </div>
                    <div class="row">
                      <div class="col-md-6 mb-4 pb-2">
      
                        
                    </div>
      
                    <div class="row">
                    
      
                    
      
                  </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      
</form>

<script>
    var change=function(event){
      var image=document.getElementById('output');
      image.src=URL.createObjectURL(event.target.files[0]);
    }; 
  </script>
