<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>User page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="css/tsc.css" />
</head>
  
<div class="menu">
       
  <img src="logo.png" height="25" />
  <a href="/commonUsers?id=<%= info.userId %>" class="menu-item"><div class="inner-menu-item">View Users with common interest</div></a>
  <a href="/viewOnline?id=<%= info.userId %>" class="menu-item"><div class="inner-menu-item">View Online Users</div></a>
  <a href="/activityLounge?id=<%= info.userId %>" class="menu-item"><div class="inner-menu-item">Games Lounge</div></a>
  <a href="/signin" class="menu-item"><div class="inner-menu-item">Study Lounge</div></a>
  <a href="/signin" class="menu-item"><div class="inner-menu-item">Logout</div></a>
</div> 
<body>
    

</div>


</div>


<section class="container py-5" >
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-114 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: 5.5rem;">
<section>
    <div class="container py-5">
      <div class="row">
        <div class="col">
          
        </div>
      </div>
  
      <div class="row">
        <div class="col-lg-4">
          <div class="card mb-4">
            <div class="card-body text-center">
              <img src="<%= info.profile %>" 
                width="170px" height="170px" style="border-radius: 50%;">
              <h5 class="my-3"><%= user.userName %></h5>
              <a><%=user.available%></a>
              <br>
              <a  href="/checkFollowers" style="color: rgb(49, 7, 165);">Check Followers</a>
              <br>
              <a  href="/checkFollowing" style="color: rgb(49, 7, 165);">Check Following</a>
              <br>
              <img src="insta.png" height="60px" />   <div class="d-flex justify-content-center mb-2">
              <button type="button" class="btn">View Instagram account</button>
              </div>
            </div>
          </div>
          <form method="post" action="/set">
          <div class="card mb-4 mb-lg-0">
            <div class="card-body p-0">
              <ul class="list-group list-group-flush rounded-3">
                <h5 class="mb-2 pb-1"><h2>Set Your Availability</h2></h5>
                <% if(user.available=="Online"){ %>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="inlineRadioOptions" id="single"
                    value="Offline" checked />
                  <label class="form-check-label" for="femaleGender"><h3>Offline</h3></label>
                  
                </div>
                <button class="btn" type="submit">Update</button>
                  <% } else{ %> 
                    <div class="form-check form-check-inline">
                   
                      <input class="form-check-input" type="radio" name="inlineRadioOptions" id="taken"
                        value="Online" />
                        <label class="form-check-label" for="maleGender"><h3>Online</h3></label>
                    </div>
                    
                      <button class="btn"  type="submit">Update</button>
                    <% } %>

               </form>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="card mb-4">
            <div class="card-body">
             
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Email</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.email %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Phone</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= user.tel %></p>
                </div>
              </div>
              <hr>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Major</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= info.major %></p>
                </div>
              </div>
              <hr>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Relationship Status</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= info.status %></p>
                </div>
              </div>
              <hr>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Age</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= info.age %></p>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Address</p>
                </div>
                <div class="col-sm-9">
                  <p class="text-muted mb-0">Bay Area, San Francisco, CA</p>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-9">
              <div class="card mb-4 mb-md-0">
                <div class="card-body">
                  <p class="mb-4"> <h3>Interests</h3> </p>
                 
                  <% for (var i=0; i < interests.length; i++) { %>
                    <h4 > </h4>
                  <hr>
                        <div class="col-sm-3">
                          <p class="mb-0"> <h5><%= interests[i].interest %></h></p>  <form method="post" action="/deleteInterest?interest=<%=interests[i].interest %>">

                            <button class=".btn-xs  type="submit">delete</button>
               

                         </form>


                              <hr>
                              
                        </div>
                  <% } %>

                  <button onclick ="location.href='/addInterest?id=<%= info.userId %>'" type="button" class="btn" >
                    Add Interest
                  </button>
            
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
</div>
</div>
</div>
</section>


 
</body>

</html>